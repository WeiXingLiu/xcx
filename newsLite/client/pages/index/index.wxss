.container {
    width: 100%;
}

.swiperContainer {
    width: 100%;
    height: 300rpx;
}

.image {
    width: 100%;
    height: 300rpx;
}

.newsList {
    width: 100%;
    background-color: rgb(238, 242, 244)
}

.newContainer {
    margin-top: 20rpx;
    width: 100%;
    background-color: white
}

.newsTitle {
    overflow:hidden; 

    text-overflow:ellipsis;
    
    display:-webkit-box; 
    
    -webkit-box-orient:vertical;
    
    -webkit-line-clamp:2; 

    position: relative;
    top: 20rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;

    font-size: 40rpx;
    font-weight: bold
}

.middleContainer {
    margin-top: 30rpx;
    display: flex;
    width: 100%;
}

.leftContainer {
    margin-left: 40rpx;
}

.newsContent {
    overflow:hidden; 

    text-overflow:ellipsis;
    
    display:-webkit-box; 
    
    -webkit-box-orient:vertical;
    
    -webkit-line-clamp:3; 

    font-size: 30rpx;
}

.tipContainer {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
}

.tipItem {
    margin-right: 40rpx;
    display: flex;
    align-items: center;
}

.tipImage {
    width: 40rpx;
    height: 40rpx;
}

.tipContent {
    margin-left: 10rpx;
    font-size: 24rpx;
}

.imageContainer {
    margin: 20rpx 40rpx 30rpx 40rpx; 
}

.newsListImage {
    width: 170rpx;
    height: 170rpx;
}
